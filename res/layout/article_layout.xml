<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/article_layout_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.repro.android.fragments.PlaceholderFragment">
        
    <RelativeLayout
        android:id="@+id/article_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin" >
    
        <TextView
	    	android:id="@+id/article_layout_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:textSize="16sp"
	        android:textStyle="bold" />
        
        <ImageView 
	        android:id="@+id/article_layout_image"
	        android:layout_width="68dp"
	        android:layout_height="45dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
	        android:layout_below="@+id/article_layout_title"
	        android:layout_marginTop="12dp"
	        android:scaleType="center"
	        android:src="@drawable/ic_launcher" />
	    
	    <TextView
	        android:id="@+id/article_layout_short_desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/article_layout_image"
	        android:layout_toEndOf="@+id/article_layout_image"
	        android:layout_alignTop="@+id/article_layout_image"
	        android:layout_marginLeft="6dp"
	        android:layout_marginStart="6dp"
	        android:textSize="14sp"
	        android:textColor="#444"
	        android:textColorLink="#444"
	        android:textColorHighlight="#444"
	        android:autoLink="web" />
	    
	    <TextView
	        android:id="@+id/article_layout_long_desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/article_layout_short_desc"
	        android:layout_alignLeft="@+id/article_layout_image"
	        android:layout_alignStart="@+id/article_layout_image"
	        android:textSize="14sp"
	        android:textColor="#444"
	        android:textColorLink="#444"
	        android:textColorHighlight="#444"
	        android:autoLink="web" />
	    
	</RelativeLayout>
        
</ScrollView>